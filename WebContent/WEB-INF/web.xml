<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>JeuIntelligent</display-name>
  
  <servlet>
    <servlet-name>Accueil</servlet-name>
    <servlet-class>fr.ji.servlets.Accueil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Accueil</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>LoadImage</servlet-name>
    <servlet-class>fr.ji.servlets.LoadImage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoadImage</servlet-name>
    <url-pattern>/plateau.png</url-pattern>
  </servlet-mapping>
  
  
  <jsp-config>
  	<jsp-property-group>
  		<url-pattern>*.jsp</url-pattern>
  		<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
  	</jsp-property-group>
  </jsp-config>
  
  
  
  
</web-app>